<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('partials/sidebar.ejs') %>
    <h1>
      <%= title %>
    </h1>
    <% if (bookinstance_list.length) { %>
    <ul>
      <% bookinstance_list.forEach((val) => { %>
        <li> 
          <a href="val.url"> <%= val.book.title %> </a> <%= val.imprint %>
            <% if (val.status === 'Available') { %>
              <span class="badge bg-success"> <%= val.status %> </span>
            <% } else if (val.status === 'Maintenance') { %>
              <span class="badge bg-warning"> <%= val.status %> </span>
            <% } else { %>
              <span class="badge bg-danger"> <%= val.status %> </span>
            <% } %>
            <% if (val.status !== 'Available') { %>
              <span class="badge bg-secondary"> <%= val.due_back %> </span>
            <% } %>
        </li>
      <% }); %>
    <% } else { %>
        <p> No book copies available in this library. </p>
    <% } %>
    </ul>
</body>

</html>
